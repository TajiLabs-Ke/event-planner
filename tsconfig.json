{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@supabase/supabase-js": ["node_modules/@supabase/supabase-js/dist/index.js"]
    },
    "types": ["vite/client", "@supabase/supabase-js"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "vite.config.ts"],
  "references": [
    { "path": "./tsconfig.app.json" }
  ]
}
